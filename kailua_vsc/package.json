{
  "name": "kailua",
  "displayName": "Kailua",
  "description": "A type checker and IDE support for Lua",
  "version": "0.0.0",
  "publisher": "devCAT",
  "preview": true,
  "engines": {
    "vscode": "^1.8.0"
  },
  "keywords": [
    "Lua",
    "Kailua"
  ],
  "categories": [
    "Languages",
    "Linters"
  ],
  "extensionDependencies": [
    "vscode.lua"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "onCommand:Kailua.EditConfiguration",
    "workspaceContains:.vscode/kailua.json"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "Kailua.EditConfiguration",
        "title": "Kailua: Edit a Configuration File"
      }
    ],
    "languages": [
      {
        "id": "lua",
        "aliases": [
          "Kailua"
        ],
        "extensions": [
          ".lua",
          ".kailua"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lua",
        "scopeName": "source.lua",
        "path": "./syntaxes/kailua.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "kailua.json",
        "url": "./kailua.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "precompile": "cd ../kailua_langsvr && cargo build",
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "@types/lodash": "^4.14.45",
    "vscode-languageclient": "^2.6.3"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  }
}
